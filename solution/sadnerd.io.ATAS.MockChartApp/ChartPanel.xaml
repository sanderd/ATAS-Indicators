<UserControl x:Class="sadnerd.io.ATAS.MockChartApp.ChartPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:skia="clr-namespace:SkiaSharp.Views.WPF;assembly=SkiaSharp.Views.WPF"
             Background="#1a1a2e"
             MouseLeftButtonDown="ChartPanel_MouseLeftButtonDown">
    
    <!-- Selection Border -->
    <Border x:Name="SelectionBorder" BorderThickness="2" BorderBrush="Transparent" CornerRadius="3">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Chart Header with Timeframe and Remove Button -->
            <Border Grid.Row="0" Background="#2a2a4e" Padding="5">
                <Grid>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                        <ComboBox x:Name="TimeframeCombo" Width="60" 
                                  SelectionChanged="TimeframeCombo_SelectionChanged"/>
                        <TextBlock x:Name="SymbolLabel" Text="ES" Foreground="White" 
                                   VerticalAlignment="Center" Margin="10,0,0,0" FontWeight="Bold"/>
                    </StackPanel>
                    <Button x:Name="RemoveButton" Content="âœ•" 
                            HorizontalAlignment="Right" VerticalAlignment="Center"
                            Click="RemoveButton_Click" Padding="5,2"
                            Background="#5a5a8c" Foreground="White" BorderThickness="0"
                            Cursor="Hand" ToolTip="Remove chart"/>
                </Grid>
            </Border>
            
            <!-- Chart Canvas -->
            <skia:SKElement x:Name="Canvas" Grid.Row="1"
                            PaintSurface="Canvas_PaintSurface"
                            MouseWheel="Canvas_MouseWheel"
                            MouseLeftButtonDown="Canvas_MouseLeftButtonDown"
                            MouseLeftButtonUp="Canvas_MouseLeftButtonUp"
                            MouseMove="Canvas_MouseMove"/>
        </Grid>
    </Border>
</UserControl>
