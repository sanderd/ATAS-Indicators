<Window x:Class="sadnerd.io.ATAS.MockChartApp.MultiChartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:sadnerd.io.ATAS.MockChartApp"
        Title="Multi-Chart View" 
        Height="900" Width="1600"
        Background="#1a1a2e"
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#3a3a5c"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#5a5a8c"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="3"/>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Top Control Bar -->
        <Border Grid.Row="0" Background="#2a2a4e" Padding="8">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Layout:" Foreground="White" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <Button Content="1x1" Click="Layout1x1_Click"/>
                <Button Content="2x1" Click="Layout2x1_Click"/>
                <Button Content="2x2" Click="Layout2x2_Click"/>
                <Button Content="3x2" Click="Layout3x2_Click"/>
                
                <TextBlock Text="Add:" Foreground="White" VerticalAlignment="Center" Margin="20,0,10,0"/>
                <Button Content="+ Chart" Click="AddChart_Click"/>
                
                <TextBlock Text="Sync:" Foreground="White" VerticalAlignment="Center" Margin="20,0,10,0"/>
                <CheckBox x:Name="SyncCrosshairCheck" Content="Crosshair" Foreground="White" 
                          VerticalAlignment="Center" IsChecked="True"/>
            </StackPanel>
        </Border>
        
        <!-- Chart Container -->
        <Grid x:Name="ChartContainer" Grid.Row="1"/>
    </Grid>
</Window>
